<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="logDirLinux">/tmp/log/</Property>
        <Property name="logDirWindows">C:/ProgramData/dktk/log/</Property>
        <Property name="fileBaseName">samply.share.client</Property>
        <Property name="fileNameSuffix">.log</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="RollingFileLinux" fileName="${logDirLinux}${fileBaseName}${fileNameSuffix}"
                     filePattern="${logDir}$${date:yyyy-MM}/${fileBaseName}-%d{yyyy-MM-dd}-%i${fileNameSuffix}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileWindows" fileName="${logDirWindows}${fileBaseName}${fileNameSuffix}"
                     filePattern="${logDir}$${date:yyyy-MM}/${fileBaseName}-%d{yyyy-MM-dd}-%i${fileNameSuffix}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileLinux"/>
            <AppenderRef ref="RollingFileWindows"/>
        </Root>
        <Logger name="org.apache.http" level="warn"/>
        <Logger name="org.jooq" level="error"/>
        <Logger name="org.jooq.Constants" level="error"/>
        <Logger name="org.quartz" level="info"/>
        <Logger name="org.flywaydb" level="warn"/>
        <Logger name="de.samply.common.mdrclient" level="error"/>
        <Logger name="org.jooq.tools" level="error"/>
    </Loggers>
</Configuration>