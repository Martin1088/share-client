<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
  <Resource auth="Container" driverClassName="org.postgresql.Driver"
    logAbandoned="true" maxIdle="30"
    maxTotal="100"
    maxWaitMillis="30000" name="jdbc/postgres" password="${database.password}"
    removeAbandonedOnBorrow="true"
    removeAbandonedOnMaintenance="true" removeAbandonedTimeout="120" testOnBorrow="true"
    type="javax.sql.DataSource" url="${database.url}"
    username="${database.username}" validationQuery="select 1"/>
</Context>
